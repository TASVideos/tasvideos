@model IEnumerable<DeletedWikiPageDisplayModel>

@{
	ViewData["Title"] = "Deleted Pages";
}

<table class="table table-striped table-bordered">
	<tr>
		<th>@Html.DisplayNameFor(m => m.First().PageName)</th>
		<th>@Html.DisplayNameFor(m => m.First().RevisionCount)</th>
		<th>@Html.DisplayNameFor(m => m.First().HasExistingRevisions)</th>
		<th>Actions</th>
	</tr>
	@foreach (var item in Model.OrderByDescending(m => m.PageName))
	{
		<tr>
			<td>@item.PageName</td>
			<td>@item.RevisionCount</td>
			<td>
				<a Condition="@item.HasExistingRevisions" href="/@item.PageName">@item.PageName</a>
			</td>
			<td>
				@if (ViewData.UserHas(PermissionTo.DeleteWikiPages))
				{
					<delete-button Condition="@item.HasExistingRevisions" asp-href="@Url.Action(nameof(WikiController.Undelete), new { path = item.PageName })" warning-message="This page already exists. Undeleting these revisions will merge them into the history of the existing page. Continue?">Undelete</delete-button>
					<a Condition="!@item.HasExistingRevisions" asp-action="Undelete" asp-route-path="@item.PageName" class="btn btn-primary">Undelete</a>
				}
			</td>
		</tr>
	}
</table>