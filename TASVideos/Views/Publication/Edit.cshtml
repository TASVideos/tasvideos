@model PublicationEditModel
@{
	ViewData["Title"] = $"Edit Movie #{Model.Id}";
}
@section PageTitle {
	<h1>@Model.Title</h1>
}

<form asp-action="Edit">
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="SystemCode" />
	<fullrow class="mt-2">
		<label asp-for="Tier"></label>:
		<a href="/@Model.TierLink">
			<img src="/@Model.TierIconPath"/>
		</a>
		<label class="form-control-label">@Model.Tier</label>
		<a permission="SetTier" class="btn btn-secondary btn-sm" asp-action="EditTier" asp-route-id="@Model.Id">Edit</a>
	</fullrow>
	<row>
		<div class="col-lg-6">
			<form-group>
				<label asp-for="Branch"></label>
				<input type="text" class="form-control" asp-for="Branch" />
				<span asp-validation-for="Branch" class="text-danger"></span>
			</form-group>
			<form-group>
				<label asp-for="ObsoletedBy"></label>
				<select asp-for="ObsoletedBy" asp-items="@UiDefaults.DefaultEntry.Concat(Model.AvailableMoviesForObsoletedBy)" class="form-control"></select>
				<span asp-validation-for="ObsoletedBy" class="text-danger"></span>
			</form-group>
			<form-group>
				<label asp-for="EmulatorVersion"></label>
				<input type="text" class="form-control" asp-for="EmulatorVersion" />
				<span asp-validation-for="EmulatorVersion" class="text-danger"></span>
			</form-group>
		</div>
		<div class="col-lg-6">
			<form-group>
				<label asp-for="OnlineWatchingUrl"></label>
				<input type="text" class="form-control" asp-for="OnlineWatchingUrl" />
				<span asp-validation-for="OnlineWatchingUrl" class="text-danger"></span>
			</form-group>
			<form-group>
				<label asp-for="MirrorSiteUrl"></label>
				<input type="text" class="form-control" asp-for="MirrorSiteUrl" />
				<span asp-validation-for="MirrorSiteUrl" class="text-danger"></span>
			</form-group>
		</div>
	</row>
	<two-column-select id-list="SelectedFlags" available-list="AvailableFlags" />
	<hr />
	<row>
		<div class="col-lg-6">
			<form-group>
				<div class="form-check">
					<input type="checkbox" class="form-check-input" asp-for="MinorEdit" />
					<label asp-for="MinorEdit" class="form-check-label"></label>
				</div>
				<label asp-for="RevisionMessage" class="form-control-label"></label>
				<input asp-for="RevisionMessage" class="form-control" />
				<span asp-validation-for="RevisionMessage" class="text-danger"></span>
			</form-group>
		</div>
	</row>
	<fullrow>
		<form-group>
			<label asp-for="Markup" class="form-control-label"></label>
			<textarea asp-for="Markup" rows="6" class="form-control"></textarea>
			<span asp-validation-for="Markup" class="text-danger"></span>
		</form-group>
	</fullrow>
	<div class="text-center mt-3">
		<button id="preview-button" type="button" class="btn btn-secondary">Preview</button>
		<button type="submit" class="btn btn-primary">Update</button>
		<a href="/@(Model.Id)M" class="btn btn-secondary">Cancel</a>
	</div>
</form>

<partial name="_PreviewWindow" model="@((nameof(Model.Markup), $"/Wiki/{nameof(WikiController.GeneratePreview)}"))" />

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
