@model PublicationEditModel
@{
	ViewData["Title"] = $"Edit Movie #{Model.Id}";
}
@section PageTitle {
	<h1>@Model.Title</h1>
}

<form asp-action="Edit">
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="SystemCode" />
	<row>
		<div class="col-lg-6">
			<label asp-for="Branch"></label>
			<input type="text" class="form-control" asp-for="Branch" />
		</div>
		<div class="col-lg-6">
			<label asp-for="ObsoletedBy"></label>
			<select asp-for="ObsoletedBy" asp-items="@Model.AvailableMoviesForObsoletedBy" class="form-control"></select>
		</div>
	</row>
	<div class="text-center mt-3">
		<button type="submit" class="btn btn-primary">Update</button>
		<a href="/@(Model.Id)M" class="btn btn-secondary">Cancel</a>
	</div>
</form>
