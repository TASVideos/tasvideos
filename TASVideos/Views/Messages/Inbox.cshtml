@model ForumInboxModel
@{
	ViewData["Title"] = $"Private messages for {Model.UserName}";
}
<table class="table table-bordered table-striped">
	<tr>
		<th>@Html.DisplayNameFor(m => m.Inbox.First().Subject)</th>
		<th>@Html.DisplayNameFor(m => m.Inbox.First().FromUser)</th>
		<th>@Html.DisplayNameFor(m => m.Inbox.First().SendDate)</th>
		<th>Actions</th>
	</tr>
	@foreach (var entry in Model.Inbox
	   .OrderBy(m => m.IsRead)
	   .ThenByDescending(m => m.SendDate))
	{
		<tr>
			<td>
				<a asp-action="Index" asp-route-id="@entry.Id">
					<span condition="!entry.IsRead" class="fa fa-envelope"></span>
					<span condition="!entry.IsRead"><strong>@entry.Subject</strong></span>
					<span condition="entry.IsRead">@entry.Subject</span>
				</a>
			</td>
			<td>@entry.FromUser</td>
			<td>@entry.SendDate</td>
			<td>
				<a asp-action="SaveToUser" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">Save</a>
				<delete-button class="btn-sm" asp-href="@Url.Action($"DeleteToUser/{entry.Id}")" warning-message="Are you sure you want to remove this message?" asp-action="DeleteToUser" asp-route-id="@entry.Id">Delete</delete-button>
			</td>
		</tr>
	}
</table>
