@model RoleDisplayViewModel
<div class="card">
	<div class="card-body p-3">
		<h5 class="card-title">@Model.Name</h5>
		<row>
			<div class="col-md-6">
				<div condition="@ViewData.UserHasPermission(PermissionTo.EditRoles)">
					<a asp-action="AddEdit" asp-route-id="@Model.Id" class="btn btn-primary mb-m">Edit</a>
				</div>
				@Model.Description
			</div>
			<div class="col-lg-3 col-md-6">
				<strong>@Html.DisplayNameFor(m => m.Permissions):</strong><br/>
				@foreach (var permission in Model.Permissions)
				{
					<div class="ml-md-0 ml-sm-4">@permission</div>
				}
			</div>
			<div condition="@Model.Links.Any()" class="col-lg-3 col-md-12">
				<strong>@Html.DisplayNameFor(m => m.Links):</strong><br/>
				@foreach (var link in Model.Links)
				{
					<div class="ml-lg-0 ml-sm-4"><a href="/@link">@link</a></div>

				}
			</div>
		</row>
	</div>
</div>