@model SubmissionPublishModel
@{
	ViewData["Title"] = $"Publishing Submission #{Model.Title}";
}

<form asp-action="Publish">
	<row>
		<div class="col-md-6">
			<form-group>
				<label asp-for="GameVersion"></label>
				<input type="text" asp-for="GameVersion" class="form-control" />
				<div>@Html.DescriptionFor(m => m.GameVersion)</div>
				<span asp-validation-for="GameVersion" class="text-danger"></span>
			</form-group>
		</div>
	</row>
	<div class="text-center">
		<button type="submit" class="btn btn-primary">Publish</button>
		<a asp-action="View" asp-route-id="@Model.Id" class="btn btn-default">Cancel</a>
	</div>
</form>