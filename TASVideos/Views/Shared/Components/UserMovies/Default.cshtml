@using System.Globalization

@model UserMovieListViewModel

<table class="table table-striped table-bordered table-sm">
	<tr>
		<th>@Html.DisplayNameFor(m => m.Entries.First().Uploaded)</th>
		<th>@Html.DisplayNameFor(m => m.Entries.First().Author)</th>
		<th>@Html.DisplayNameFor(m => m.Entries.First().FileName)</th>
		<th>@Html.DisplayNameFor(m => m.Entries.First().Title)</th>
	</tr>

	@foreach (var item in Model.Entries)
	{
		<tr>
			<td>@item.Uploaded.ToString("G", CultureInfo.InvariantCulture)</td>
			<td>@item.Author</td>
			<td><a href="/userfiles/info/@item.Id">@item.FileName</a></td>
			<td>@item.Title</td>
		</tr>
	}
</table>