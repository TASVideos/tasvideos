@using TASVideos.Data.Entity.Forum
@model ForumTopicModel
@{
	ViewData["Title"] = $"TASVideos Forum {Model.Title}";
}

<h4>@Model.Title</h4>
<div>
	<a asp-controller="ForumTopic" asp-action="Create" asp-route-forumId="@Model.Id" class="btn btn-primary"><span class="fa fa-plus"></span>Post</a>
</div>
<hr />
@Html.Partial("~/Views/Table/_Pager.cshtml", Model.Posts)

@foreach (var post in Model.Posts)
{
	<div class="card">
		<div class="card-header">
			Posted: @post.PostTime
			Author: @post.PosterName
			Posts: @post.PosterPostCount
			Location: @post.PosterLocation
			Joined: @post.PosterJoined
			<img src="@post.PosterAvatar"/>
		</div>
		<div class="card-body">
			<small>Subject: @post.Subject</small>
			@post.Text
		</div>
	</div>
}
