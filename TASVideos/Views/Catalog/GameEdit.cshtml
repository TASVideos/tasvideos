@model GameEditModel
@{
	ViewData["Title"] = Model.Id.HasValue
		? $"Editing Game #{Model.Id} {Model.DisplayName}"
		: "Create a new Game entry";
}
<form asp-route="GameEdit">
	<input type="hidden" asp-for="Id" />
	<row>
		<div class="col-md-6">
			<form-group>
				<label asp-for="SystemCode"></label>
				<select asp-for="SystemCode" asp-items="@Model.AvailableSystems.OrderBy(s => s.Value)" class="form-control"></select>
				<span asp-validation-for="SystemCode"></span>
			</form-group>
			<form-group>
				<label asp-for="GoodName"></label>
				<input type="text" asp-for="GoodName" class="form-control" auto-complete="off" />
				<span asp-validation-for="GoodName"></span>
			</form-group>
			<form-group>
				<label asp-for="DisplayName"></label>
				<input type="text" asp-for="DisplayName" class="form-control" auto-complete="off" />
				<span asp-validation-for="DisplayName"></span>
			</form-group>
			<form-group>
				<label asp-for="Abbreviation"></label>
				<input type="text" asp-for="Abbreviation" class="form-control" auto-complete="off" spellcheck="false" />
				<span asp-validation-for="Abbreviation"></span>
			</form-group>
		</div>
		<div class="col-md-6">
			<form-group>
				<label asp-for="SearchKey"></label>
				<input type="text" asp-for="SearchKey" class="form-control" auto-complete="off" spellcheck="false" />
				<span asp-validation-for="SearchKey"></span>
			</form-group>
			<form-group>
				<label asp-for="YoutubeTags"></label>
				<input type="text" asp-for="YoutubeTags" class="form-control" auto-complete="off" spellcheck="false" />
				<span asp-validation-for="YoutubeTags"></span>
			</form-group>
			<form-group>
				<label asp-for="ScreenshotUrl"></label>
				<input type="text" asp-for="ScreenshotUrl" class="form-control" auto-complete="off" spellcheck="false" />
				<span asp-validation-for="ScreenshotUrl"></span>
			</form-group>
		</div>
	</row>
	<div class="text-center">
		<button id="submit-btn" type="submit" class="btn btn-primary">Update</button>
		<a asp-action="GameList" class="btn btn-default">Cancel</a>
	</div>
</form>