@model IList<TASVideos.ViewComponents.Models.GameNameModel>

@if (Model.Any(g => g.IsSystem))
{
	<span>@Model.First().System</span>
}
else
{
	//foreach (var game in Model)
	for (int i = 0; i < Model.Count; i++)
	{
		<game-link id="Model[i].GameId">@Model[i].DisplayName</game-link><span condition="i < Model.Count - 1">, </span>
	}
}
