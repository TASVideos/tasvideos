@using System.Globalization
@model IEnumerable<TASVideos.Services.RssFeedParsers.CommitEntry>

<table class="table table-striped table-bordered table-sm">
	<tr>
		<th>By</th>
		<th>At</th>
		<th>Message</th>
	</tr>
	@foreach (var entry in Model)
	{
		var result = DateTime.TryParse(entry.At, out var date);
		string dateStr = result ? date.ToString(CultureInfo.CurrentCulture) : "";
		<tr>
			<td>@entry.Author</td>
			<td>@dateStr</td>
			<td>
				<a href="@entry.Link">
					@entry.Message.CapAndEllipse(100)
				</a>
			</td>
		</tr>
	}
</table>

