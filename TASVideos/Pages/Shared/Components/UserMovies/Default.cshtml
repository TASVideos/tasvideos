@using System.Globalization

@model IEnumerable<TASVideos.Pages.UserFiles.Models.UserMovieListModel>

<table class="table table-striped table-bordered table-sm">
	<tr>
		<th>@Html.DisplayNameFor(m => m.First().UploadedTimestamp)</th>
		<th>@Html.DisplayNameFor(m => m.First().Author)</th>
		<th>@Html.DisplayNameFor(m => m.First().FileName)</th>
		<th>@Html.DisplayNameFor(m => m.First().Title)</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>@item.UploadedTimestamp.ToString("G", CultureInfo.InvariantCulture)</td>
			<td>@item.Author</td>
			<td><a asp-page="/Userfiles/Info" asp-route-id="@item.Id">@item.FileName</a></td>
			<td>@item.Title</td>
		</tr>
	}
</table>