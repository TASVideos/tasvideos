@model IEnumerable<TASVideos.Pages.UserFiles.Models.UserMovieListModel>
<div class="table-container">
	<table class="table table-striped table-bordered table-sm">
		<tr>
			<th>@Html.DisplayNameFor(m => m.First().UploadTimestamp)</th>
			<th>@Html.DisplayNameFor(m => m.First().Author)</th>
			<th>@Html.DisplayNameFor(m => m.First().FileName)</th>
			<th>@Html.DisplayNameFor(m => m.First().Title)</th>
		</tr>

		@foreach (var item in Model!)
		{
			<tr>
				<td><timezone-convert asp-for="@item.UploadTimestamp" date-only="true" /></td>
				<td>@item.Author</td>
				<td><a asp-page="/Userfiles/Info" asp-route-id="@item.Id">@item.FileName</a></td>
				<td>@item.Title</td>
			</tr>
		}
	</table>
</div>
<a asp-page="/UserFiles/Index">More User Files...</a>
<div class="mt-4">
	<a asp-page="/UserFiles/Upload" class="btn btn-primary"><i class="fa fa-upload"></i> Upload a User File</a>
</div>
