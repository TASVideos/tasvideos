<alert id="welcome-header" class="d-none" condition="!User.IsLoggedIn()" type="dark" dismissible="true">
	<button id="welcome-header-dismiss" type="button" class="btn-close float-end" data-dismiss="alert" aria-label="close"></button>
	@await Component.RenderWiki("System/WelcomeText")
	<script>
		(function () {
			var welcomeHeader = document.getElementById("welcome-header");
			var dismissBtn = document.getElementById("welcome-header-dismiss");
			var dismiss = window.localStorage.getItem("DismissWelcomeHeader");
			if (dismiss !== "true") {
				welcomeHeader.classList.remove("d-none");
			}

			dismissBtn.onclick = function () {
				window.localStorage.setItem("DismissWelcomeHeader", true);
				welcomeHeader.classList.add("d-none");
			}
		})();
	</script>
</alert>