@model IEnumerable<TASVideos.Pages.Submissions.Models.SubmissionListEntry>

<table class="table table-striped table-bordered table-sm">
	<tr>
		<th>@Html.DisplayNameFor(m => m.First().GameName)</th>
		<th>@Html.DisplayNameFor(m => m.First().Branch)</th>
		<th>@Html.DisplayNameFor(m => m.First().Time)</th>
		<th>@Html.DisplayNameFor(m => m.First().Author)</th>
		<th>@Html.DisplayNameFor(m => m.First().Submitted)</th>
		<th>@Html.DisplayNameFor(m => m.First().Status)</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td><a href="/@(item.Id)S">@item.System @item.GameName @(!string.IsNullOrWhiteSpace(item.Branch) ? $"\"{item.Branch}\"" : "")</a></td>
			<td>@item.Branch</td>
			<td>@($"{item.Time:g}")</td>
			<td>@item.Author</td>
			<td><timezone-convert asp-for="@item.Submitted" date-only="true" /></td>
			<td>@item.Status.EnumDisplayName()</td>
		</tr>
	}
</table>