@page
@model WikiSyntaxErrorsModel
@{
	ViewData.SetTitle("Wiki Syntax Errors");
}

<top-button-bar>
	<label class="heading">Total: @Model.Rows.Count</label>
	<back-link asp-page="Index"></back-link>
</top-button-bar>
<standard-table>
	<table-head columns="Page Name,Error Message,Excerpt"></table-head>
	<tbody>
		@foreach (var row in Model.Rows)
		{
			<tr>
				<th scope="row"><a href=@("/" + row.PageName)>@row.PageName</a></th>
				<td>@row.ErrorMessage</td>
				<td>
					@row.ExcerptBefore
					<span class="error-marker"></span>
					@row.ExcerptAfter
				</td>
			</tr>
		}
	</tbody>
</standard-table>
