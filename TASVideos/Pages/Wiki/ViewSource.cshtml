@page
@model ViewSourceModel
@{
	ViewData["Title"] = "View Page Source";
}
<div>
	<small>
		Revision @Model.Revision (current)<br />
		Last Updated by @(Model.WikiPage.CreateUserName ?? "Unknown") on <timezone-convert asp-for="@Model.WikiPage.CreateTimestamp" /> 
	</small>
</div>
<div>
	<a href="/@Model.WikiPage.PageName" class="btn btn-secondary">Back to Page</a>
</div>
<hr />
@Html.Raw(Model.WikiPage.Markup.Replace("\n", "<br />"))

