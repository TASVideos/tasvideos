@page
@model EditModel
@{
	ViewData["Title"] = $"Editing {Model.Path}";
}

<form method="POST">
	<form-group class="col-lg-6">
		<row>
			<div class="form-check">
				<input type="checkbox" class="form-check-input" asp-for="PageToEdit.MinorEdit" />
				<label asp-for="PageToEdit.MinorEdit" class="form-check-label"></label>
			</div>
		</row>
		<row>
			<label asp-for="PageToEdit.RevisionMessage" class="form-control-label"></label>
			<input type="text" asp-for="PageToEdit.RevisionMessage" class="form-control" autocomplete="off" />
			<span asp-validation-for="PageToEdit.RevisionMessage" class="text-danger"></span>
		</row>
	</form-group>
	<form-group>
		<textarea asp-for="PageToEdit.Markup" class="form-control" rows="20"></textarea>
		<span asp-validation-for="PageToEdit.Markup" class="text-danger"></span>
		@await Component.InvokeAsync(typeof(RenderWikiPage), new { url = "System/WikiEditHelp" })
	</form-group>
	<div class="text-center">
		<button type="button" class="btn btn-secondary" id="preview-button">Preview</button>
		<button type="submit" class="btn btn-primary">Save</button>
		<a href="/@Model.Path" class="btn btn-secondary">Cancel</a>
	</div>
	<div class="text-center alert-info" role="alert">
		<label class="small alert-info">By pressing "Save/Edit" you agree to publish this content under the <a target="_blank" href="https://creativecommons.org/licenses/by/2.0/"> Creative Commons Attribution 2.0</a> license.</label>
	</div>
</form>

<partial name="_PreviewWindow" model="@(("PageToEdit_Markup", $"/Wiki/{nameof(Controllers.WikiController.GeneratePreview)}"))" />

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
