@page
@model UserFilesModel

@{
	ViewData.SetTitle("My Files");
	ViewData.AddActivePage(ProfileNavPages.UserFiles);
	var used = Model.Files.Sum(f => f.FileSizeCompressed);
}

<top-button-bar>
	<a asp-page="/UserFiles/Index" class="btn btn-secondary float-end">All User Files</a>
	<a asp-page="/UserFiles/Upload" class="btn btn-primary"><i class="fa fa-upload"></i> Upload</a>
</top-button-bar>
<partial name="_StorageUsed" model="used" />

<partial name="_Pager" model="Model.Files" />
@foreach (var file in Model.Files)
{
	<partial name="_UserFileInfo" model="file" />
}
<partial name="_Pager" model="Model.Files" />
