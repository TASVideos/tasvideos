@page
@model ListModel
@{
	ViewData["Title"] = "Listing of Games With Addresses";
}

<table class="table table-striped table-bordered">
	<tr>
		<th>Game</th>
		<th>System</th>
		<th></th>
	</tr>
	@foreach (var entry in Model.Entries.OrderBy(e => e.SystemCode).ThenBy(e => e.GameName))
	{
		<tr>
			<td>@entry.GameName</td>
			<td>@entry.SystemCode</td>
			<td>
				<a asp-page="Index" asp-route-id="@entry.GameId" class="btn btn-secondary">View</a>
				<a asp-page="Edit" asp-route-id="@entry.GameId" permission="EditRamAddresses" class="btn btn-primary">Edit</a>
			</td>
		</tr>
	}
</table>
