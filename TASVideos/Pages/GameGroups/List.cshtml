@page
@model ListModel
@{
	ViewData["Title"] = "Game Groups";
}
<a asp-page="/Games/List" class="btn btn-primary mb-3 float-end mr-5">Games</a>
<a class="float-end btn btn-primary me-1" permission="CatalogMovies" asp-page="Edit"><i class="fa fa-plus"></i> Create</a>
<ul>
	@foreach(var group in Model.GameGroups.OrderBy(gg => gg.Name))
	{
		<li>
			<a asp-page="Index" asp-route-id="@group.Id">@group.Name</a>
		</li>
	}
</ul>
