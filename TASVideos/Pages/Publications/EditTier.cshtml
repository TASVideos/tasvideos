@page "{id}"
@model EditTierModel
@{
	ViewData["Title"] = $"Edit Tier for {Model.Publication.Title}";
}

<form method="post">
	<input type="hidden" asp-for="Title" />
	<row>
		<div class="col-lg-4 col-sm-6">
			<form-group>
				<label asp-for="Publication.TierId"></label>
				<select class="form-control" asp-for="Publication.TierId" asp-items="@Model.AvailableTiers"></select>
				<span asp-validation-for="Publication.TierId" class="text-danger"></span>
			</form-group>
		</div>
	</row>
	<div class="text-center mt-3">
		<submit-button class="btn btn-primary">Update</submit-button>
		<a asp-page="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Back To Edit</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
