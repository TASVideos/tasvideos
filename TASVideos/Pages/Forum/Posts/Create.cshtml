@page "{topicId}"
@model CreateModel
@{
	ViewData["Title"] = $"Posting to Topic: {Model.Post.TopicTitle}";
}
<partial Name="_ForumHeader" />
<h4>Posting to Topic: <a asp-page="/Forum/Topics/Index" asp-route-id="@Model.TopicId">@Model.Post.TopicTitle</a></h4>

<form form-method="POST">
	<input type="hidden" asp-for="Post.TopicTitle" />
	<form-group class="col-lg-6">
		<row>
			<label asp-for="Post.Subject" class="form-control-label"></label>
			<input type="text" asp-for="Post.Subject" class="form-control" autocomplete="off"/>
			<span asp-validation-for="Post.Subject" class="text-danger"></span>
		</row>
	</form-group>
	<form-group>
		<partial name="_CreatePostHelper" model="nameof(Model.Post)" />
	</form-group>
	<form-group>
		<textarea asp-for="Post" class="form-control" rows="20"></textarea>
		<span asp-validation-for="Post" class="text-danger"></span>
	</form-group>
	<div class="text-center">
		<button type="button" class="btn btn-secondary" id="preview-button">Preview</button>
		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-page="/Forum/Topics/Index" asp-route-id="@Model.TopicId" class="btn btn-secondary">Cancel</a>
	</div>
</form>

<partial name="_PreviewWindow" model="@((nameof(Model.Post), $"/Forum/{nameof(Controllers.ForumController.GeneratePreview)}"))" />

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
