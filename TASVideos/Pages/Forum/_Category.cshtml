@model TASVideos.Data.Entity.Forum.ForumCategory

<card class="mb-2">
	<cardheader>
		<a permission="EditCategories" asp-page="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm float-end">Edit</a>
		<h4>@Model.Title</h4>
		@if (!string.IsNullOrWhiteSpace(Model.Description))
		{
			<div class="text-small">
				@Html.Raw(Model.Description)
			</div>
		}
	</cardheader>
	<cardbody>
		@foreach (var forum in Model.Forums
			.OrderBy(f => f.Ordinal)
			.Where(f => ViewData.UserHas(PermissionTo.SeeRestrictedForums) || !f.Restricted))
		{
			<strong>
				<a asp-page="/Forum/Subforum/Index" asp-route-id="@forum.Id">@forum.Name</a>
			</strong>
			<div class="mb-2 ps-3">
				<small>
					@Html.Raw(forum.Description)
				</small>
			</div>
		}
	</cardbody>
</card>