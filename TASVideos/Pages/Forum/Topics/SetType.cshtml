@page "{topicId}"
@model SetTypeModel
@{
	ViewData["Title"] = $"Setting type for topic for: {Model.TopicTitle}";
}
<partial Name="_ForumHeader" />
<h4>Setting type for topic: <a asp-page="/Forum/Subforum" asp-route-id="@Model.ForumId">@Model.ForumName</a></h4>


<form method="post">
	<input type="hidden" asp-for="ForumId"/>
	<input type="hidden" asp-for="ForumName" />
	<input type="hidden" asp-for="TopicTitle"/>
	<row>
		<column md="6">
			<label asp-for="Type" class="form-control-label"></label>
			<select type="text" asp-for="Type" class="form-control" asp-items="Model.TopicTypes"></select>
			<span asp-validation-for="Type" class="text-danger"></span>
		</column>
	</row>
	<div class="text-center mt-3">
		<button type="submit" class="btn bg-primary text-white">Save</button>
		<a asp-page="/Forum/Topics/Index" asp-route-id="@Model.TopicId" class="btn bg-secondary text-white">Cancel</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
