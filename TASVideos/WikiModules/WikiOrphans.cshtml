@model WikiOrphans

@if (Model.Orphans.Any())
{
	<div>Total: @Model.Orphans.Count</div>
	<standard-table>
		<table-head columns="Last Modified,Page,Last Author"></table-head>
		@foreach (var orphan in Model.Orphans)
		{
			<tr>
				<td><timezone-convert asp-for="@orphan.LastUpdateTimestamp" /></td>
				<td>
					<wiki-link page-name="@orphan.PageName"></wiki-link>
				</td>
				<td>@orphan.LastUpdateUserName</td>
			</tr>
		}
	</standard-table>
}
else
{
	<info-alert>
		No Orphans to Display
	</info-alert>
}
